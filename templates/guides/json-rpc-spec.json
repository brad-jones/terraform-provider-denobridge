        {
          "name": "Ephemeral Resource"
        }
      ],
      "params": [
        {
          "name": "params",
          "required": true,
          "schema": {
            "type": "object",
            "properties": {
              "privateData": {
                "type": "object",
                "description": "Private data from open or renew call"
              }
            },
            "required": ["privateData"]
          }
        }
      ],
      "result": {
        "name": "closeResult",
        "schema": {
          "type": "object",
          "properties": {
            "done": {
              "type": "boolean",
